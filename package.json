{
  "name": "gh-repo-settings",
  "version": "0.1.0",
  "description": "GitHub CLI extension to manage repository settings via YAML",
  "type": "module",
  "bin": {
    "gh-repo-settings": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsup && chmod +x dist/cli.js",
    "dev": "tsup --watch",
    "lint": "biome check",
    "lint:fix": "biome check --write",
    "format": "biome format --write",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "prepare": "husky"
  },
  "keywords": [
    "github",
    "gh",
    "cli",
    "extension",
    "settings",
    "yaml"
  ],
  "author": "",
  "license": "MIT",
  "packageManager": "pnpm@10.14.0",
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "@inquirer/prompts": "^8.0.1",
    "commander": "^14.0.2",
    "js-yaml": "^4.1.1",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.8",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^24.10.1",
    "@vitest/coverage-v8": "^4.0.14",
    "husky": "^9.1.7",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.14"
  }
}
